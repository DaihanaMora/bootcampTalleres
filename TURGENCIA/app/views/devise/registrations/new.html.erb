<div class="container">
    <div class="row">
        <div class="col-sm-5">
            <span><h1>Bienvenido</h1> <h3>cual es tu urgencia?<br> Registrate para lograr  atenderte.</h3></span>
        </div>
        <div class="col-sm-7">
            <h2>Sign up</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field1">
                <%= f.label :Nombre %><br />
                <%= f.text_field :name %>
              </div>
              <br>
              <div class="field2">
                <%= f.label :Apellido %><br />
                <%= f.text_field :lastname %>
              </div>

              <div class="field3">
                <%= f.label :imagen %><br />
                <%= f.file_field :avatar %>
              </div>

              <br>
              <div class="field4">
                <%= f.label :Identificacion %><br />
                <%= f.text_field :identify %>
              </div>
              <br>
              <div class="field5">
                <%= f.label :entity %><br />
                <%= f.collection_select :entity_id, Entity.all, :id, :name %>
              </div>
              <br>
              <div class="field6">
                <%= f.label :Email %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>
              <br>
              <div class="field7">
                <%= f.label :ContraseÃ±a %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>
              <br>
              <div class="field8">
                <%= f.label :Confirme_su_contraseÃ±a %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
              <br>
              <div class="actions" id="enviar">
                <%= f.submit "Sign up" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>   

            <br>
        </div>    
    </div>     
</div>