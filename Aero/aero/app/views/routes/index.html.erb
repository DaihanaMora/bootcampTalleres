<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Ciudad origen</th>
      <th>Ciudad destino</th>
      <th>Valor</th>
      <th>Hora salida</th>
      <th>Hora llegada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.ciudad_origen %></td>
        <td><%= route.ciudad_destino %></td>
        <td><%= route.valor %></td>
        <td><%= route.hora_salida %></td>
        <td><%= route.hora_llegada %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr><ul>
        <% route.planes.each do |p|%>
          <td><%= p.piloto %></td>
          <td><%= p.codigo %></td>
        <% end %>
      </ul></tr>
    <% end %>
  </tbody>
</table>

<br>

